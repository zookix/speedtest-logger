echo "IF YOU ARE RUNNING THIS SCRIPT FOR THE FIRST TIME PLEASE RUN AS ROOT "
now=$(date +"%m_%d_%Y_%H-%M")
if [ -x "/bin/speed" ]
then
	speed &> ~/speed-log/speed-$now.txt
else
	wget -O /bin/speed https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest_cli.py
	chmod +x /bin/speed
        echo "Script installed speedtest cli please re-run the script as normal user."
fi
